<div class="app-search-form">
  <form>
    {{ govukInput({
      id: "search[schoolName]",
      name: "search[schoolName]",
      label: {
        text: "Search schools",
        classes: "govuk-label--s app-search-form__label"
      },
      hint: {
        text: "Enter the schoolâ€™s name, postcode, URN or induction tutor email"
      },
      value: data.search.schoolName
